<Window x:Class="CourseAdvising.AddCourse"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="AddCourse" Height="300" Width="500" Background="Aquamarine">
    <Grid>
        <Label Height="30" HorizontalAlignment="Left" Margin="44,43,0,0" Name="label1" VerticalAlignment="Top" Width="91">Course ID</Label>
        <TextBox Height="23" Margin="224,43,43,0" Name="courseID" VerticalAlignment="Top" />
        <Label HorizontalAlignment="Left" Margin="44,89,0,0" Name="label2" Width="91" Height="30" VerticalAlignment="Top">Course Title</Label>
        <Label Height="30" HorizontalAlignment="Left" Margin="44,0,0,98" Name="label3" VerticalAlignment="Bottom" Width="91">Credit</Label>
        <TextBox Height="23" Margin="224,89,43,0" Name="courseTitle" VerticalAlignment="Top" />
        <TextBox Height="23" Margin="0,0,43,105" Name="credit" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="70" />
        <Button Height="35" HorizontalAlignment="Left" Margin="44,0,0,28" Name="add" VerticalAlignment="Bottom" Width="95" Click="add_Click">Add</Button>
        <Button Height="35" HorizontalAlignment="Right" Margin="0,0,43,28" Name="cancel" VerticalAlignment="Bottom" Width="95" Click="cancel_Click">Cancel</Button>
    </Grid>
</Window>
